<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>ATN Toy Store</title>
    </head>

    <body>
        <h1>Input product to database.</h1>
        
        <!-- (1): CREATE Task -->         
        <!-- --> 
        <form action="/quotes" method="POST">   
            <input type="text" placeholder="Product name" name="Product" />        
            <input type="text" placeholder="Price" name="Price" />
            <INPUT TYPE="Radio" Name="ingredients"  Value="V">Vinyl
            <INPUT TYPE="Radio" Name="ingredients"  Value="AP">ABS Plastic
            <INPUT TYPE="Radio" Name="ingredients"  Value="P">Polystone 
            <button type="submit">Submit</button>
        </form>
        <!-- -->                               

        <!-- (2) READ Task -->                        
        <h2> Products in Database </h2>
        <ul class="quotes">
            <!-- Loop through quotes -->
            <% for(var i = 0; i < quotes.length; i++) {%>
                <li class="quote">
                    Product name:
                    <!-- Output Product from the iterated quote object -->
                    <span><%= quotes[i].Product %></span>
                    Price:
                    <!-- Output Price from the iterated quote object -->
                    <span><%= quotes[i].Price %></span>VNƒê
                    ingredients:
                    <!-- Output ingredients from the iterated quote object -->
                    <span><%= quotes[i].ingredients %></span>
                </li>
            <% } %>
            
        </ul>    
    
    </body>

</html>